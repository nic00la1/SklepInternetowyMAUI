<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SklepInternetowyMAUI.MainPage">

    <CollectionView ItemsSource="{Binding Produkty}" Margin="20">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame CornerRadius="10" BorderColor="Gray">
                    <VerticalStackLayout>
                        <Image Source="{Binding Obrazek}"/>
                        <Label Text="{Binding Nazwa}"
                           FontSize="24"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           Margin="0,0,0,20"/>
                        <HorizontalStackLayout>
                            <!-- Tekst opisowy - Cena -->
                            <Label Text="Kategoria: "
                                   TextColor="Black"/>

                            <!-- Wartość wyróżniona -->
                            <Label Text="{Binding Kategoria}"
                                   Margin="8,0"/>
                        </HorizontalStackLayout>
                        <HorizontalStackLayout>
                            <!-- Tekst opisowy - Cena -->
                            <Label Text="Cena: "
                                   TextColor="Black"/>

                            <!-- Wartość wyróżniona -->
                            <Label Text="{Binding Cena, StringFormat='{0:F2} zł'}"
                                   FontAttributes="Bold"
                                   Margin="8,0"/>
                        </HorizontalStackLayout>
                        <HorizontalStackLayout>
                            <!-- Tekst opisowy Dostępna ilość -->
                            <Label Text="Dostępna ilość w magazynie: "
                                   TextColor="Black"/>

                            <!-- Wartość wyróżniona -->
                            <Label Text="{Binding DostepnaIlosc}"
                                   FontAttributes="Bold"
                                   Margin="8,0"/>
                        </HorizontalStackLayout>
                        <Grid Margin="0, 20, 0,0"
                          ColumnDefinitions="*,*"
                          ColumnSpacing="10">
                            <Button Text="Zakup"
                                    BackgroundColor="Green"
                                    HorizontalOptions="FillAndExpand"
                                    Clicked="OnZakupClicked"/>
                            <Button Text="Zwróć"
                                    Clicked="OnZwrocClicked"
                                    BackgroundColor="PaleVioletRed"
                                    HorizontalOptions="FillAndExpand"
                                    Grid.Column="1"/>
                        </Grid>
                    </VerticalStackLayout>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>
