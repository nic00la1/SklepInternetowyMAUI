<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SklepInternetowyMAUI.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Frame CornerRadius="10" BorderColor="Gray">
                <VerticalStackLayout>
                    <Image Source="dotnet_bot.png"/>
                    <Label Text="Laptop Dell XPS 13"/>
                    <Label Text="Kategoria: Laptopy"/>
                    <Label Text="Dostępna ilość w magazynie: 0"/>
                    <HorizontalStackLayout>
                        <Button Text="Zakup"
                                BackgroundColor="Green"/>
                        <Button Text="Zwróć"
                                BackgroundColor="PaleVioletRed"/>
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
